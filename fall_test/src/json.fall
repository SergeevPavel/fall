tokenizer {
  lbrace     '{'
  rbrace     '}'
  lbrack     '['
  rbrack     ']'
  colon      ':'
  comma      ','
  null       'null'

  whitespace r"\s+"
  bool       r"true|false"
  string     r#""[^"]*""#
  number     r"\d+"
}

pub rule file {
  object | array
}

pub rule object {
  '{' <commit>
    object_body
  '}'
}

rule object_body { <rep {field <commit> <opt ','> } {string} {'}'}> }

pub rule field {
  string <commit> ':' value
}

pub rule array {
  '[' <commit>
    <rep {value <opt ','>} {'null'|number|string|bool|'{'|'['} {']'}>
  ']'
}

rule value { primitive | object | array }

pub rule primitive { 'null' | number | string | bool }
